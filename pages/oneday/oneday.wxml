<import src="../components/cookbook/cookbook.wxml"/>
<import src="../components/book/book.wxml"/>
<import src="../components/error/error.wxml"/>
<view class="container">
  <block wx:if='{{category == "cookbook"}}'>
    <template is="cookbook" data="{{...detaildats}}"></template>
  </block>
  <block wx:elif='{{category == "book"}}'>
    <template is="book" data="{{...bookdata}}"></template>
  </block>
  <block wx:else>
    <template is="error"></template>
  </block>
  <button class="page-reload" bindtap="refresh">Êç¢</button>
</view>